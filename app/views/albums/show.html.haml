%h2
  = @album.album_title
%h4
  = @album.album_artist
  %br
  %b Released: 
  = @album.release_date
#controls
  #editbutton
    = link_to t('.edit_album'), edit_album_path(@album)
  #backbutton
    = link_to t('.back'), albums_path

- if !@album.songs.empty?
  %h3 Songs:
  %table
    %thead
      %tr
        %th Title
        %th Genre
        %th Length (nearest minute)
        %th{:colspan => "3"}= 'Actions'
    %tbody
    - @album.songs.each do |song|
      %tr 
        %td= song.song_title
        %td= song.genre
        %td= song.length
        %td= link_to t('.show_song'), song
        %td= link_to t('.edit_song'), edit_song_path(song)
        %td= link_to t('.delete_song'), song, :method => :delete, :data => { :confirm => t('.delete_confirm')}
- else
  %p This album has no songs.
%br
#button
  = link_to t('.add_song'), new_song_path(album_id: @album)