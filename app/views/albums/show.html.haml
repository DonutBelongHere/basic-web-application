%p#notice= notice

%p
  %b Album title:
  = @album.album_title
%p
  %b Album artist:
  = @album.album_artist
%p
  %b Release date:
  = @album.release_date

= link_to t('.edit_album'), edit_album_path(@album)
\|
= link_to t('.back'), albums_path

%p Songs:
%table
  %thead
    %tr
      %th Title
      %th Genre
      %th Length (nearest minute)
      %th{:colspan => "3"}= 'Actions'
  %tbody
  - @album.songs.each do |song|
    %tr 
      %td= song.song_title
      %td= song.genre
      %td= song.length
      %td= link_to t('.show_song'), song
      %td= link_to t('.edit_song'), edit_song_path(song)
      %td= link_to t('.delete_song'), song, :method => :delete, :data => { :confirm => t('.delete_confirm')}
%br

%div{:class => "button"}= link_to t('.add_song'), new_song_path(album_id: @album)