.container
  %h2= t('.albums_title')
.container
  - if !@albums.empty?
    %table
      %thead
        %tr
          %th= t('.album_col_title')
          %th= t('.album_col_artist')
          %th= t('.album_col_release')
          %th{:colspan => "3"}= t('.actions')

      %tbody
        - @albums.each do |album|
          %tr
            %td= album.album_title
            %td= album.album_artist
            %td= album.release_date
            %td= link_to t('.show_album'), album
            %td= link_to t('.edit_album'), edit_album_path(album)
            %td= link_to t('.delete_album'), album, method: :delete, data: { confirm: t('.delete_confirm') }
  - else
    %p= t('.no_albums')
%br
#button
  = link_to t('.new_album'), new_album_path
