%h1 Listing songs

%table
  %thead
    %tr
      %th Album
      %th Song title
      %th Genre
      %th Length
      %th
      %th
      %th

  %tbody
    - @songs.each do |song|
      %tr
        %td= song.album.album_title
        %td= song.song_title
        %td= song.genre
        %td= song.length
        %td= link_to 'Show', song
        %td= link_to 'Edit', edit_song_path(song)
        %td= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Song', new_song_path
