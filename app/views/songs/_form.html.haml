.container
  = form_for @song do |f|
    - if @song.errors.any?
      #error_explanation
        %h2= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
        %ul
          - @song.errors.full_messages.each do |message|
            %li= message

    .field
      = f.label :album
      %p= @song.album.album_title
      = f.hidden_field :album_id, value: @song.album.id
    .field
      = f.label :song_title
      = f.text_field :song_title
    .field
      = f.label :genre
      = f.text_field :genre
    .field
      = f.label :length
      = f.number_field :length
    .actions
      = f.submit 'Save'
